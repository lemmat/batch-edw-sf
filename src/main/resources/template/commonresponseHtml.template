<html>
<style>
	table,
	th,
	td {
		border: 1px solid black;
		border-collapse: collapse;
	}
</style>

<body>
	<table>
		<thead>
			<tr>
				<th colspan="3">Job Status</th>
			</tr>
		</thead>
		<thead>
			<tr>
				<th>CorrelationId</th>
				<th>JobName</th>
				<th>ErrorDescription</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>#[correlationId]</td>
				<td>#[vars.job]</td>
				<td>#[payload.message default ""]</td>
			</tr>
		</tbody>
	</table>
</body>

</html>